<%- include('../partials/header') %>

<section id="new-city-page">
  <div class="container">
<p style="font-size: 20px">Please first ensure that the Location is not in the dropdown</p>
        <select class="browser-default">
          <% cities.forEach(function(c) { %>
            <option><%= c.location %></option>
          <% }) %>
        </select>

      <form id="add-city-form" action="/users" method="POST">
        <label>Location:</label>
        <input type="text" name="location">
        <button class="btn-small waves-effect waves-light red lighten-2">Add Location</button>
      </form>
    </div>
    </section>
  <%- include('../partials/footer') %>